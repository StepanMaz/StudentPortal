{
	"name": "Auth Service Dev Container",
	"build": {
		"dockerfile": "Dockerfile",
		"context": "."
	},
	"forwardPorts": [
		5000,
		5432
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-dotnettools.csdevkit"
			],
			"settings": {
				"[json]": {
					"editor.formatOnSave": true
				}
			}
		}
	},
	"runArgs": [
		"--network=host"
	],
	"mounts": [
		"source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
	],
	"postCreateCommand": "dotnet restore"
}