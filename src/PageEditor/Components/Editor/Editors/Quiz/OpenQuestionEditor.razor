@inherits EditorComponentBase<OpenAnswerQuestionComponent>

@code {
    public Task UpdateQuestionText(string newText)
    {
        return UpdateComponent(Component with
        {
            QuestionText = newText
        });
    }
}

<LabeledContainer Label="Open Question">
    <LabeledContainer Label="Question Text" Class="w-full">
        <DebouncedInput Class="w-full" @bind-Value:get="Component.QuestionText" @bind-Value:set="UpdateQuestionText" />
    </LabeledContainer>
</LabeledContainer>