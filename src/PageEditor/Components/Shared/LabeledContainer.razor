@code {
    [Parameter, EditorRequired]
    public required string Label { get; set; }

    [Parameter]
    public required RenderFragment ChildContent { get; set; }

    [Parameter]
    public string Class { get; set; } = "";
}

<div class=@($"border rounded-md relative p-3 mt-2 {Class}")>
    <span class="absolute bg-white" style="top: -13px; left: 10px;">@Label</span>
    @ChildContent
</div>