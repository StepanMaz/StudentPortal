@code {
    [Parameter, EditorRequired]
    public required string Label { get; set; }

    [Parameter]
    public required RenderFragment ChildContent { get; set; }

    [Parameter]
    public string Class { get; set; } = "";
}

<div class=@($"border border-gray-300 rounded-md relative px-3 py-2 mt-2 {Class}")>
    <span class="absolute bg-white leading-3" style="top: -8px; left: 10px;">@Label</span>
    @ChildContent
</div>