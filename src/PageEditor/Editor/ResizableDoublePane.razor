@code {
    [Parameter, EditorRequired]
    public required RenderFragment Left { get; set; }

    [Parameter, EditorRequired]
    public required RenderFragment Right { get; set; }
}

<MudContainer Style="height: 100%">
    <MudSplitter Style="height: 100%">
        <StartContent>
            @Left
        </StartContent>
        <EndContent>
            @Right
        </EndContent>
    </MudSplitter>
</MudContainer>