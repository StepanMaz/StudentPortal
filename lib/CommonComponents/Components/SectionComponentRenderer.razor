@using StudentPortal.CommonComponents.Components.Section

@namespace StudentPortal.CommonComponents.Components

@code {
    [Parameter, EditorRequired]
    public required SectionComponent Data { get; set; }
}

@if (Data.DisplayMode == SectionDisplayMode.Pages && Data.Components.Count > 1)
{
    <SectionPaginated Components="Data.Components"/>
}
else
{
    <SectionSequential Components="Data.Components"/>
}